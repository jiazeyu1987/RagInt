# RAGFlow API Configuration
# Copy this file to .env and fill in your actual values

# RAGFlow Server Configuration
RAGFLOW_API_KEY=your_api_key_here
RAGFLOW_BASE_URL=http://localhost:9380
RAGFLOW_USERNAME=your_username
RAGFLOW_PASSWORD=your_password

# Knowledge Base Configuration
RAGFLOW_DEFAULT_VS_TYPE=chromadb
RAGFLOW_DEFAULT_EMBED_MODEL=text2vec
RAGFLOW_CHUNK_SIZE=512
RAGFLOW_CHUNK_OVERLAP=50

# Chat Configuration
RAGFLOW_TEMPERATURE=0.7
RAGFLOW_MAX_TOKENS=1000
RAGFLOW_TOP_K=3
RAGFLOW_SIMILARITY_THRESHOLD=0.0
RAGFLOW_RERANK=true

# Logging Configuration
RAGFLOW_LOG_LEVEL=INFO
RAGFLOW_LOG_FILE=ragflow_demo.log