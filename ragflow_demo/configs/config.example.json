{
  "ragflow": {
    "api_key": "your_ragflow_api_key_here",
    "base_url": "http://localhost:9380"
  },
  "knowledge_base": {
    "default_vs_type": "chromadb",
    "default_embed_model": "text2vec",
    "chunk_size": 512,
    "chunk_overlap": 50
  },
  "chat": {
    "temperature": 0.7,
    "max_tokens": 1000,
    "top_k": 3,
    "similarity_threshold": 0.0,
    "rerank": true,
    "stream": false
  }
}